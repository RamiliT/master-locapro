<div class="modal fade" id="modalEditLigneCommande" role="dialog">
    <div class="modal-dialog">

        <form action="#" method="post" id="ligneEdit_form">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title text-primary">Modification</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="ligneCommande_id" name="ligneCommande_id" class="form-control"  required>

                    <div class="form-group">
                        <label for="ligneCommande_designation">Désignation</label>
                        <input type="text" id="ligneCommande_designation" name="ligneCommande_designation" class="form-control"  required>
                    </div>

                    <div class="form-group">
                        <label for="ligneCommande_quantite">Quantité</label>
                        <input type="text" id="ligneCommande_quantite" name="ligneCommande_quantite" class="form-control"  required>
                    </div>

                    <div class="form-group">
                        <label for="ligneCommande_prix">PU</label>
                        <input type="text" id="ligneCommande_prix" name="ligneCommande_prix" class="form-control"  >
                    </div>

                    <div class="form-group ">
                        <label for="ligneCommande_remise">Remise</label>
                        <input type="text" id="ligneCommande_remise" name="ligneCommande_remise" class="form-control" >
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary ">Enregistrer</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                </div>
            </div>
        </form>
    </div>
</div>

{#SCRIPT GET LIGNE COMMANDE#}
<script>
    $('.btnEditLigne').click(function (){
        getLink = $('.btnEditLigne').data('link');

        $.get( getLink, function( data ) {
            // $( ".result" ).html( data );
            ligneCommande = JSON.parse(data);
            console.log(ligneCommande);
            $('#ligneCommande_id').val(ligneCommande.id)
            $('#ligneCommande_quantite').val(ligneCommande.quantite)
            $('#ligneCommande_designation').val(ligneCommande.designation)
            $('#ligneCommande_prix').val(ligneCommande.prix)
            $('#ligneCommande_remise').val(ligneCommande.remise)

            $('#ligneEdit_form').prop('action', ligneCommande.editLink)


            $('#modalEditLigneCommande').modal();

        });

    });

</script>

