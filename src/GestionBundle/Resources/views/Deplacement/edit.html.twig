{% extends 'base.html.twig' %}

{% block titre_page %} <strong class="text-success">Modification du transfert</strong> {% endblock %}
{% block titre_description %}Modification du transfert de produits N° {{ deplacement.numero }} {% endblock %}
{% block body %}
    {% set i =0 %}
    {% set j =0 %}
    {% for lignD in deplacement.lignedeplacement %}
        {% set i =i+1 %}
    {% endfor %}
    {% if deplacement.etat == 'Transfert en attente de confirmation' or deplacement.etat == 'Transfert confirmée' %}
        {% set j =j+1 %}
    {% endif %}
    <div class="row">
        <div class="col-md-8">
            <div class="box">
                <form action="#" method="post">
                    <div class="box-header with-border">
                        <h3 class="box-title"><i class="fa fa-plus-circle"></i> Formulaire de modification </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                            <div class="form-group">
                                <label for="date" class=" control-label">Date :</label>
                                <div class="input-group date form_date " data-date="" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                    <input required class="form-control"  type="text" value="{{ deplacement.date|date('d/m/Y') }}"  name="date">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                </div>
                                <input type="hidden" id="dtp_input2" value="" /><br/>
                            </div>


                            <div class="form-group col-md-5">
                                <label for="source_depot">Dépot de stockage source <b class="text-danger" id="err_source_depot"></b></label>
                                <select required  class="form-control" name="source_depot" id="source_depot"
                                        {% if i>0  %}
                                            disabled
                                        {% endif %}

                                >

                                    {% for depot in depots %}
                                        <option value="{{ depot.id }}"

                                                {% if depot.nom == deplacement.sourcedepot.nom %}
                                                     selected
                                                {% endif %}
                                        >{{ depot.nom }} - {{ depot.abrv }}</option>
                                    {% endfor %}

                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <br>
                                <div class="text-center">
                                    <i class="fa fa-chevron-right fa-2x "></i><i class="fa fa-chevron-right fa-2x"></i>
                                </div>
                            </div>
                            <div class="form-group col-md-5">
                                <label for="destination_depot">Dépot de stockage déstination <b class="text-danger" id="err_destination_depot"></b></label>
                                <select required  class="form-control" name="destination_depot" id="destination_depot"
                                        {% if i>0  %}
                                             disabled
                                        {% endif %}>

                                    {% for depot in depots %}
                                        <option value="{{ depot.id }}"

                                                {% if depot.nom == deplacement.destinationdepot.nom %}
                                                    selected
                                                {% endif %}
                                        >{{ depot.nom }} - {{ depot.abrv }}</option>
                                    {% endfor %}
                                </select>
                            </div>


                        <div class="form-group">
                            <label for="motif">Motif (facultatif): <b class="text-danger" id="err_motif"></b></label>
                            <textarea
                                    {% if  j>0 %}
                                        disabled
                                    {% endif %}
                                    rows="3" class="form-control" name="motif" id="motif" ></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <input type="submit"  id="btn" value="Modifier" class="btn btn-success btn-block" />
                            </div>
                            <div class="col-md-6">
                                <a href="{{ path('deplacement_index') }}" class="btn btn-default btn-block">Annuler</a>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>

    </div>

    <br><br><br><br><br><br>


    {#NUMERAL FORMAT#}
    <script>
        numeralFormat('#produitbundle_produit_prixAchat');
        numeralFormat('#produitbundle_produit_prixVente');

        $('#btn').click(function () {
            if($('#source_depot').val()== $('#destination_depot').val())
            {
                $('#textModalDanger').text('Il faut changé la valeur du dépot déstination ');
                $('#modalDanger').modal();
                return false;
            }
        })
    </script>
    {#DATEPICKER#}
    <script src="{{ asset('DatePicker1/js/bootstrap-datetimepicker.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('DatePicker1/js/locales/bootstrap-datetimepicker.fr.js') }}" charset="UTF-8"></script>
    <script>
        $('.form_date').datetimepicker({
            format: 'dd/mm/yyyy',
            language:  'fr',
            weekStart: 1,
            todayBtn:  1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });
    </script>
{% endblock %}
